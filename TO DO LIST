#include <iostream>
#include <vector>
#include <string>
using namespace std;

struct Task {
    string description;
    bool completed;
};

// Function to display all tasks
void viewTasks(const vector<Task>& tasks) {
    if (tasks.empty()) {
        cout << "\nNo tasks available.\n";
        return;
    }

    cout << "\nYour To-Do List:\n";
    for (size_t i = 0; i < tasks.size(); i++) {
        cout << i + 1 << ". "
             << tasks[i].description
             << " [" << (tasks[i].completed ? "Completed" : "Pending") << "]\n";
    }
}

// Function to add a task
void addTask(vector<Task>& tasks) {
    Task newTask;
    cout << "\nEnter task description: ";
    cin.ignore();
    getline(cin, newTask.description);
    newTask.completed = false;
    tasks.push_back(newTask);
    cout << "Task added successfully!\n";
}
void markTaskCompleted(vector<Task>& tasks) {
    viewTasks(tasks);
    if (tasks.empty()) return;

    int choice;
    cout << "\nEnter task number to mark as completed: ";
    cin >> choice;

    if (choice < 1 || choice > tasks.size()) {
        cout << "Invalid task number!\n";
    } else {
        tasks[choice - 1].completed = true;
        cout << "Task marked as completed!\n";
    }
}

// Function to remove a task
void removeTask(vector<Task>& tasks) {
    viewTasks(tasks);
    if (tasks.empty()) return;

    int choice;
    cout << "\nEnter task number to remove: ";
    cin >> choice;

    if (choice < 1 || choice > tasks.size()) {
        cout << "Invalid task number!\n";
    } else {
        tasks.erase(tasks.begin() + choice - 1);
        cout << "Task removed successfully!\n";
    }
}
int main() {
    vector<Task> tasks;
    int option;

    do {
        cout << "\n====== TO-DO LIST MANAGER ======\n";
        cout << "1. Add Task\n";
        cout << "2. View Tasks\n";
        cout << "3. Mark Task as Completed\n";
        cout << "4. Remove Task\n";
        cout << "5. Exit\n";
        cout << "Choose an option: ";
        cin >> option;
 switch (option) {
            case 1:
                addTask(tasks);
                break;
            case 2:
                viewTasks(tasks);
                break;
            case 3:
                markTaskCompleted(tasks);
                break;
            case 4:
                removeTask(tasks);
                break;
            case 5:
                cout << "Exiting To-Do List Manager. Goodbye!\n";
                break;
            default:
                cout << "Invalid option! Try again.\n";
        }

    } while (option != 5);

    return 0;
}
